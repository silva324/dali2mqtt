# DALI2MQTT Environment Configuration
# Copy this file to .env and adjust the values

# ===== MQTT Broker Configuration =====
MQTT_SERVER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_BASE_TOPIC=dali2mqtt

# ===== DALI Configuration =====
# Driver options: hid_hasseb, hid_tridonic
DALI_DRIVER=hid_hasseb
# Number of DALI lamps to scan (max 64)
DALI_LAMPS=64

# ===== Home Assistant Integration =====
HA_DISCOVERY_PREFIX=homeassistant

# ===== Logging =====
# Log level: debug, info, warning, error, critical
LOG_LEVEL=info
# Color output (set to false for Docker logs)
LOG_COLOR=false
